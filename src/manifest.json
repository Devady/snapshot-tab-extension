{
  "$schema": "https://json.schemastore.org/chrome-manifest",
  "manifest_version": 2,
  "name": "Snapshot Current Webpage",
  "description": "Take a snapshot of the current webpage",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["activeTab", "<all_urls>"]
}
